<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="6dp">

    <ImageView
        android:id="@+id/pic_row_im1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/cd_pic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pic_row_im2"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginEnd="6dp"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/pic_row_im2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/cd_pic"
        app:layout_constraintStart_toEndOf="@id/pic_row_im1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pic_row_im3"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="centerCrop"
        android:layout_marginEnd="6dp"/>

    <ImageView
        android:id="@+id/pic_row_im3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/cd_pic"
        app:layout_constraintStart_toEndOf="@id/pic_row_im2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="centerCrop"/>

</androidx.constraintlayout.widget.ConstraintLayout>